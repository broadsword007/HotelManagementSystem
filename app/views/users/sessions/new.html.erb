<div class="login-page-content">
  <div class="row container">
    <div class="col s12 login-form-column">
      <div class="card login-form-container-card">
        <div class="card-content">
          <span class="card-title">Login</span>
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
          <p>Please fillout the following fields for login</p>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="row">
                <div class="input-field col s12 m12 l12">
                  <%= f.label :email %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>

                <div class="input-field col s12 m12 l12">
                  <%= f.label :password %>
                  <%= f.password_field :password, autocomplete: "off" %>
                </div>
                <div class="col  s12 m12 l12">
                  <a href="/users/password/new" class="waves-effect waves-teal btn-flat">Forgot your password?</a>
                </div>
                <div class="col  s12 m12 l12">
                  <p style="display: inline;">Don't have an account?</p><a href="/users/sign_up" class="waves-effect waves-teal btn-flat medium-left-margin">Sign up</a>
                </div>
                <% if devise_mapping.rememberable? -%>
                    <div class="col s12 m12 l6" style="line-height: 36px;">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                <% end %>
                <div class="col s12 m12 l6">
                  <button class="btn waves-effect waves-light login-page-button-submit" type="submit" name="action">Login
                    <i class="material-icons right">send</i>
                  </button>
                  <!--<input type="submit" name="commit" value="Log in" data-disable-with="Log in">-->
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
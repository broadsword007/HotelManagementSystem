<%= stylesheet_link_tag 'room_categories' %>
<div class="form-page-content">
  <div class="row container">
    <div class="col s12 form-column">
      <div class="card signup-form-container-card">
        <div class="card-content">
          <span class="card-title">Add New Room Category</span>
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
          <p>Please fillout the following fields to create a new room</p>
          <%= form_for(@room_category) do |f| %>
              <div class="row">
                <div class="col s12 m12 l12">
                  <ul>
                    <% @room_category.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
                <div class="col s12 m12 l12">
                  <div class="row">
                    <!--<div class="col s12 m12 l12">
                      <img id="prof-pic-preview" src="" alt="Please upload an image" class="profile-pic-preview" />
                    </div>-->
                    <div class="col s12 m12 l12">
                      <%= f.label 'Picture' %>
                      <%= f.file_field :category_pic, accept: "image/*" %>
                      <!--<div class="file-field input-field">
                        <div class="btn">
                          <span>Profile Picture</span>
                          <input name="user[profile_pic]" type="file" accept="image/*">
                        </div>
                        <div class="file-path-wrapper">
                          <input id="user_profpic" class="file-path validate"
                                 type="text">
                        </div>-->
                    </div>
                  </div>
                </div>
                <div class="input-field col s6 m6 l6">
                  <%= f.label :name %>
                  <%= f.text_field :name %>
                </div>
                <div class="input-field col s12 m12 l12">
                  <%= f.label :description %>
                  <%= f.text_field :description %>
                </div>
                <div class="input-field col s12 m12 l12">
                  <%= f.label :rate %>
                  <%= f.text_field :rate %>
                </div>
                <div class="col s6 m6 l6">
                  <button class="btn waves-effect waves-light form-button-submit" type="submit" name="action">Create Category
                    <i class="material-icons right">send</i>
                  </button>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
    $(document).ready(function(){
        $('select').material_select();
    });
</script>
